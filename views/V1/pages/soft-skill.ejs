            <div class="container__skill">
                <% const bar = {
                    imageUrl: 'images/categories/cercle-2.png',
                    imageAlt: 'cercle-2.png',
                    }; %>
                   
                <%- include('../molecules/skillbar.ejs', { imageUrl: bar.imageUrl, imageAlt: bar.imageAlt }) %>
            </div>
        <main class="main container">
			<div class="container__intro">
                <% const cardtext = {
                    title: 'Soft Skill',
