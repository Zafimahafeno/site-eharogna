    <script>



            const steps = document.querySelectorAll('.step');
            const prevBtns = document.querySelectorAll('.prev-btn');
            const nextBtns = document.querySelectorAll('.next-btn');
            
            

            let currentStep = 0;

            const updateStep = () => {
            steps.forEach((step, index) => {
                if (index === currentStep) {
                step.classList.add('active');
                } else {
                step.classList.remove('active');
                }
            });
            
            prevBtns.forEach(btn => btn.disabled = currentStep === 0);
            
            if (currentStep === steps.length - 1) {
                nextBtns.forEach(btn => btn.style.display = 'none');
                finishBtn.style.display = 'inline-block';
            } else {
                nextBtns.forEach(btn => btn.style.display = 'inline-block');
                finishBtn.style.display = 'none';
            }
            };

            prevBtns.forEach(btn => {
            btn.addEventListener('click', () => {
                currentStep--;
                updateStep();
            });
            });

            nextBtns.forEach(btn => {
            btn.addEventListener('click', () => {
                currentStep++;
                updateStep();
            });
            });

            updateStep();  


            // Ajouter le script pour la boîte de dialogue modale
    const modal = document.getElementById('myModal');
    const finishBtn = document.querySelector('.suivant-button'); // Utilisation du bouton "Suivant"
    const ignorerBtn = document.querySelector('.ignorer-button'); // Utilisation du bouton "Ignorer"
    const closeButton = document.querySelector('.close');
    const okButton = document.querySelector('.ok-button'); // Ajout du bouton "OK"


    function showModal() {
        // Utiliser SweetAlert2 pour une boîte de dialogue modale plus conviviale
        Swal.fire({
            title: "Succès!",
            text: "Votre compte a été créé avec succès. L'administration va approuver votre inscription!",
            icon: "success",
            confirmButtonText: "OK",
        }).then((result) => {
            // Rediriger vers la page login-register si l'utilisateur clique sur "OK"
            if (result.isConfirmed) {
                window.location.href = "./login-register";
            }
        });
    }
