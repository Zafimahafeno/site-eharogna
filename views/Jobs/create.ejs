<%- include('../layouts/header') -%>
	<%- include('../layouts/adminLayouts') %>
		<script src="/assets/ckeditor/ckeditor.js"></script>
		<div class="app-wrapper">
			<div class="app-content pt-3 p-md-3 p-lg-4">
				<div class="container-xl">
					<h1 class="app-page-title mb-0">Creation d'un Emploie</h1>
					<hr class="mb-4">
					<div class="g-4 settings-section">

						<form class="settings-form row" action="/api/job/create" method="post"
							enctype="multipart/form-data">
							<div class="col-12">
								<div class="app-card app-card-settings shadow-sm p-4">
									<div class="app-card-body row">
										<div class="mb-3 col">
											<label for="exampleFormControlInput1" class="form-label">Titre de
												l'emploie</label>
											<input type="text" class="form-control" id="exampleFormControlInput1"
												name="title" placeholder="Titre de l'employe">
										</div>
										<div class="mb-3 col">
											<label for="exampleFormControlInput1" class="form-label">Nom de
												l'entreprise</label>
											<input type="text" class="form-control" id="exampleFormControlInput1"
												name="companyName" placeholder="Nom du company">
										</div>
										<div class="mb-3">
											<label for="exampleFormControlInput1" class="form-label">Nom du
												Poste</label>
											<input type="text" class="form-control" id="exampleFormControlInput1"
												name="JobTitle" placeholder="Nom du Poste">
										</div>
										<div class="mb-3 col">
											<label for="exampleFormControlInput1" class="form-label">salaire
												minimun</label>
											<input type="number" class="form-control" id="exampleFormControlInput1"
												name="MinSalary" placeholder="salaire minimun">
										</div>
										<div class="mb-3 col">
											<label for="exampleFormControlInput1" class="form-label">salaire
												maximum</label>
											<input type="number" class="form-control" id="exampleFormControlInput1"
												name="MaxSalary" placeholder="salaire maximum">
										</div>

										<div class="mb-3">
											<label for="formFile" class="form-label">Photo de Couverture (Logo de
												l'entreprise)</label>
											<br>
											<input class="form-control-file" name="imagefile" type="file" id="formFile">
										</div>
									</div>
								</div>
							</div>
							<div class="mb-3 mt-3 col-12 col-md-12">
								<h3 class="section-title">Description de l'emploie</h3>
								<br>
								<textarea class="form-control" id="ck" name="description" rows="10"></textarea>
							</div>
							<button type="submit" class="btn app-btn-primary btn-lg btn-block mt-4">Enregistrer</button>
						</form>
					</div>
				</div><!--//container-fluid-->
			</div>
			<script type="text/javascript">CKEDITOR.replace('ck');</script>
		</div>
		<%- include('../layouts/footer') -%>