    <style>
        /* Ajoutez ces styles dans votre fichier CSS */
    
        /* Alignement horizontal pour header-top */
        .header-top {
            display: flex;
            justify-content: space-between;
            align-items: center;
            background-color: transparent; /* Header-top transparent */
            padding: 30px; /* Agrandissement de la partie du header-top */
            color: #fff; /* Texte en blanc */
        }
    
        /* Styles pour la liste de navigation */
        .header-top ul {
            display: flex;
            list-style: none;
            margin: 0;
            padding: 0;
            align-items: right;
        }
    
        .header-top ul li {
            margin-left: 20px;
        }
    
        .header-top ul li a {
            text-decoration: none;
            color: #fff;
            font-size: 30px; /* Agrandissement des textes de header-top */
        }
    
        /* Styles supplémentaires pour améliorer la mise en page */
        .header-top .first-part {
            display: flex;
            align-items: center;
        }
        
        
        .header-top .logo {
            display: flex;
            align-items: center;
            margin-right: 20px;
        }
    
        .header-top .logo img {
            height: 40px;
            margin-right: 10px;
        }
    
        .header-top .logo .name {
            height: 30px;
        }
    
        /* Styles pour la barre de recherche */
        .mb-4 form .input-group {
            width: 100%;
        }
    
        .mb-4 form .form-control {
            border-radius: 0;
        }
    
        .mb-4 form .btn-outline-success {
            border-radius: 0;
        }
    
        /* Styles pour la liste de catégories */
        .mb-4 .categories li {
            margin-bottom: 10px;
        }
    
        /* Styles pour les cartes de cours */
        .single_post {
            border: 1px solid #ccc;
            padding: 20px;
            margin-bottom: 20px;
            border-radius: 5px;
        }
    
        .single_post .header {
            text-align: center;
        }
    
        .single_post .header h2 {
            margin: 0;
        }
    
        .single_post .body {
            margin-top: 20px;
        }
    
        .single_post .body h3 {
            margin: 0;
            font-size: 18px;
        }
    
        .single_post .body .meta {
            margin-top: 10px;
            list-style: none;
            padding: 0;
        }
    
        .single_post .body .meta li {
            display: inline-block;
            margin-right: 10px;
        }
    
        .single_post .body .img-post {
            position: relative;
        }
    
        .single_post .body .social_share {
            position: absolute;
            bottom: 10px;
            right: 10px;
        }
    
        .single_post .body .social_share .btn {
            margin-right: 5px;
        }
    
        .single_post .body a.btn-info {
            display: block;
            margin-top: 30px;
        }
    
        /* Ajout de l'image de fond pour le header */
        header {
            background-image: url('images/cours/cours.png');
            background-repeat: no-repeat;
            background-position: center center;
            background-size: cover;
        }
        .single_post .body .img-post {
        position: relative;
        width: 100%;
        height: 200px; /* Ajustez la hauteur selon vos besoins */
