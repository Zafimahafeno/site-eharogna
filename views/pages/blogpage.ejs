    <%- include('../V1/pages/head.ejs'); %>

<header style="background-image: url('images/cours/cours.png')">
    <%- include('../V1/molecules/header-top.ejs', {current_item: 1}); %>
<%- include('../layouts/headerfront') %>
<div class="header-main">
    <h1 class="title">LISTE DES COURS</h1>
   </div>
    
</header>
</head>
<body>
<div class="container blog-page">
    <div class="row">
        <div class="col-sm-12 col-md-9 mb-4">
            <div class="row">
                <% if (data.length==0) { %>
                <div class="col-sm-12 col-md-12">
                <h4 class="text-center">Aucun cours n'est disponible</h4>
                </div>
                <% } else { %>
                <% data.forEach((item, i)=> { %>
                <div class="col-lg-4 col-md-6 mb-4">
                    <div class="card single_post">
                        <div class="header">
                            <h2><strong>Most</strong> View</h2>
                        </div>
                        <div class="body">
                            <h3 class="m-t-0 m-b-5"><a href="blog/<%= item.id %>"><%= item.title %></a></h3>
                            <ul class="meta">
                                <li><a href="javascript:void(0);"><i class="fa fa-clock-o"></i>Read time: <%= item.readTime %></a></li>
                                <li><a href="javascript:void(0);"><i class="zmdi zmdi-label col-amber"></i><%= item.courseCat.title %></a></li>
                            </ul>
                        </div>
                        <div class="body">
                            <div class="img-post m-b-15">
                                <img src="<%= item.image %>" alt="Awesome Image">
                                <div class="social_share">
                                    <button class="btn btn-primary btn-icon btn-icon-mini btn-round"><i class="zmdi zmdi-facebook"></i></button>
                                    <button class="btn btn-primary btn-icon btn-icon-mini btn-round"><i class="zmdi zmdi-twitter"></i></button>
                                    <button class="btn btn-primary btn-icon btn-icon-mini btn-round"><i class="zmdi zmdi-instagram"></i></button>
                                </div>
                            </div>
                            <a href="blog/<%= item.id %>" title="read more" class="btn btn-round btn-info">Read More</a>
                        </div>
                    </div>
                </div>
                <% }) %>
                <% } %>
            </div>
            <nav class="app-pagination">
                <ul class="pagination justify-content-center">
                    <% if (meta.page <=1) { %>
                    <li class="page-item disabled">
                        <a class="page-link" href="#" tabindex="-1" aria-disabled="true">Previous</a>
                    </li>
                    <% } else { %>
                    <li class="page-item">
                        <a class="page-link" href="blog?page=<%= (meta.page-1) %>" tabindex="-1">Previous</a>
                    </li>
                    <% } %>
                    <% for(var i=0; i< meta.last_page; i++) {%>
                    <li class="page-item <% if((i+1)==meta.page){%> active <% }%>">
                        <a class="page-link" href="blog?page=<%= (i+1) %>"><%= (i+1) %></a>
                    </li>
                    <% } %>
                    <% if (meta.page>= meta.last_page) { %>
                    <li class="page-item disabled">
                        <a class="page-link" href="#" tabindex="-1" aria-disabled="true">Next</a>
                    </li>
                    <% } else { %>
                    <li class="page-item">
                        <a class="page-link" href="blog?page=<%= (meta.page+1) %>" tabindex="-1">Next</a>
                    </li>
                    <% } %>
                </ul>
            </nav>
        </div>
        <div class="col-md-3">
            <div class="mb-4">
                <form>
                    <div class="input-group">
                    <input type="text" class="form-control" placeholder="Search..." aria-describedby="basic-addon2">
                <button class="input-group-addon btn btn-outline-success" id="basic-addon2"><i class="fa fa-search"></i></button>
                    </div>
                </form>
            </div>
            <div class="mb-4">
                <h4 class="sidebar-title">Categories</h4>
                <ul class="list-unstyled categories">
                    <% category.forEach((item, i)=> { %>
                    <li><a href="/courses/category/<%= item.id %>"><%= item.title %></a></li>
                    <% }) %>
                </ul>
            </div>
        </div>
    </div>
</div>
</body>
